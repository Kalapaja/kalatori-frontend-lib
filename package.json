{
  "name": "@kalatori/frontend-lib",
  "version": "0.1.0",
  "description": "TypeScript library for integrating Kalatori payment gateway into websites",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "kalatori",
    "polkadot",
    "payments",
    "cryptocurrency",
    "typescript"
  ],
  "author": "Kalatori Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.8",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "node-fetch": "2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.6.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kalatori/kalatori-frontend-lib.git"
  },
  "bugs": {
    "url": "https://github.com/kalatori/kalatori-frontend-lib/issues"
  },
  "homepage": "https://github.com/kalatori/kalatori-frontend-lib#readme"
